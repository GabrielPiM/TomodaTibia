{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "TomodaTibia": "Data Source=DESKTOP-TIU07LE;Initial Catalog=TomodaTibia;Integrated Security=True"

  },

  "TibiaAPI": "https://api.tibiadata.com/v2/characters/",

  "ValidHosts": [
    "youtube.com",
    "youtu.be",
    "www.youtu.be",
    "www.youtube.com"
  ],

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": true,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [  ],
    "EndpointWhitelist": [ "get:/api/license", "*:/api/status" ],
    "ClientWhitelist": [ "1", "dev-id-2" ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1000s",
        "Limit": 3
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 150
      },
      {
        "Endpoint": "*",
        "Period": "1d",
        "Limit": 500
      }
    ]
  }
}

